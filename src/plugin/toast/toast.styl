.toast-box
  position: fixed
  z-index: 10000000
  left: 50%
  bottom: 12%
  transform: translate(-50%, -50%)
  color: white
  background: rgba(0, 0, 0, 0.5)
  padding: 10px 18px
  border-radius: 6px
  transition: 0.3s
  text-align: center

  &.toast-enter, &.toast-leave-to
    opacity: 0

  &.toast-enter-to, &.toast-leave
    transform: translate(-50%, -50%)
    opacity: 1

  &.toast-enter
    transform: translate(-50%, 50%)

  &.toast-leave-to
    transform: translate(-50%, -150%)
